.container {
  display: flex;
  flex-direction: column;
  height: 100vh; /* 占据整个视窗的高度 */
}

.search-bar {
  height: 50px;
  background-color: #f0f0f0;
  padding: 10px;
  box-sizing: border-box;
}

.navigation-bar {
  height: 40px;
}

.nav-item {
  height: 100%;
  line-height: 40px;
  text-align: center;
}

.map-container {
  flex: 1; /* 占据剩余空间 */
  position: relative;
}

.map {
  width: 100%;
  height: 100%;
}
