.navigateBox{
  width: 100%; 
  height: 90rpx; 
  background-color: rgb(236, 236, 236);
  display: flex;
  flex-direction: row;
  align-items: center;
  color: rgb(75, 75, 75);
}

.picBox{
  margin: 30rpx 2.5% 50rpx 2.5%;
  width: 95%;
  height: 790rpx;
  border-radius: 20px;
  box-shadow: 5px 5px 5px 0 rgba(0, 0, 0, 0.4);
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: center;
  background-color: rgba(216, 216, 216, 0.5);
}

.title{
  height: 26%;
  margin-top: 4%;
  display: flex;
  flex-direction: row;
}